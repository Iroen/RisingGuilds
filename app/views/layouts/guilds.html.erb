<% content_for :tabs do %>
<%
tabs = Array.new
if params[:action] == "index"
	tabs << link_to("New guild", new_guild_path) if permitted_to? :create, @guild
elsif params[:action] == "show"
	tabs << link_to("Index", guilds_path)
	tabs << link_to("Members", "/guilds/#{@guild.id}/characters")
	tabs << link_to("Raids", "/guilds/#{@guild.id}/raids")

	if permitted_to? :edit, @guild
		tabs << ""
		tabs << link_to("Edit", edit_guild_path(@guild))
		tabs << link_to("Actualize", :action => "actualize", :id => @guild.id)
	end
end
render :partial => 'shared/tabs', :locals => {:tabs => tabs}
%>
<% end %>

<% content_for :content do %>
  <%= yield %>
<% end %>

<%= render(:file => 'layouts/application')%>

