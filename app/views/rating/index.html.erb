<h1>Guild Rating</h1>

<table>
  <thead>
	<tr>
		<th>#</th>
		<th>Name</th>
		<th>Rating</th>
		<th>Members</th>
		<th>Website</th>
	</tr>
	</thead>
	<tbody>
	<% @guilds.each_with_index do |guild,i| %>
	<tr>
		<td><%= "#{i+1}." %></td>
		<td><%= link_to h(guild.name), guild_path(guild) %></td>
		<td><% unless guild.rating.nil? %><%= guild.rating %><% else %>n/a<% end %></td>
		<td><%= guild.characters.count %></td>
		<td><%= link_to guild.website, guild.website %></td>
	</tr>	
	<% end %>
  </tbody>
</table>
<%= will_paginate @guilds%>
