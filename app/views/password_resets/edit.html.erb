<h1>Change My Password</h1>

<%= form_for @user, :url => password_reset_path, :method => :put do |f| %>
  <%= f.error_messages %>
  <%= f.label :password, t('password_resets.password') %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.label :password_confirmation, t('password_resets.confirmation') %><br />
  <%= f.password_field :password_confirmation %><br />
  <br />
  <%= f.submit t('password_resets.update') %>
<% end %>
