<% form_for(@guild) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :realm %><br />
    <%= f.select :realm, {'PvE-Realm' => 'PvE-Realm', 'PvP-Realm' => 'PvP-Realm'} %>
  </p>

  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', guilds_path %>