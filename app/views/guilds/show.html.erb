<% 
tabs = Array.new
tabs << link_to("Index", guilds_path)
tabs << link_to("Members", "/guilds/#{@guild.id}/characters")
tabs << link_to("Raids", "/guilds/#{@guild.id}/raids")

if permitted_to? :edit, @guild
	tabs << ""
	tabs << link_to("Edit", edit_guild_path(@guild))
	tabs << link_to("Actualize", :action => "actualize", :id => @guild.id)
end
render :partial => 'shared/tabs', :locals => {:tabs => tabs}
%>

<div id="guildinfos">
	<div class="guildlogo">
		<%= image_tag(@guild.logo.url, :alt => "guildlogo", :size => "100x100") %>
	</div>
	<div class="guildname">
	  <%=h @guild.name %>
	</div>
	<div id="guildmembers">
	  <%=h @guild.characters.count %> members <%=h "(#{@guild.characters.find_all_by_online(true).count} online)"%>
	</div>
	<div id="guildrealm">
	  <%=h @guild.realm %>	
	</div>
	<% unless @guild.website.nil? %>
	<div id="website">
	  <%= link_to @guild.website, @guild.website %>
	</div>
	<% end %>
</div>
<div class="clear">&nbsp;</div>
<div id="description">
	  <%=h @guild.description %>
</div>
<div id="details">
	<div>
	  <b>Ail:</b>
	  <%=h @guild.ail %>
	</div>

	<div>
	  <b>Activity:</b>
	  <%=h @guild.activity %>
	</div>

	<div>
	  <b>Growth:</b>
	  <%=h @guild.growth %>
	</div>

	<div>
	  <b>Altratio:</b>
	  <%=h @guild.altratio %>
	</div>

	<div>
	  <b>Classratio:</b>
	  <%=h @guild.classratio %>
	</div>

	<div>
	  <b>Achivementpoints:</b>
	  <%=h @guild.achivementpoints %>
	</div>
</div>

<div id="events">
	<h3>Newest Events</h3>
	<%= render :partial => 'shared/event', :collection => @guild.events.last(20).reverse %>
</div>

<div style="position:relative; width:100%">
<% if permitted_to? :edit, @guild %>
<div id ="secret">
  <b>Token:</b>
  <%=h @guild.token %>
</div>
<% end %>
</div>