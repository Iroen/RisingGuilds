<table>
	<thead>
	<tr>
		<th class="narrow"></th>
		<th><%= t('login') %></th>
		<th><%= t('users.last_login') %></th>
		<th><%= t('users.characters') %></th>
		<th class="narrow"></th>
		<th class="narrow"></th>
		<th class="narrow"></th>
	</tr>
	</thead>
	<% if params[:guild_id] %>
	<tbody>
		<tr class="header">
			<th class="narrow"></th>
			<th colspan="3"><%= image_tag('icons/role-leader.gif') %> <%= t('users.leaders') %></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
		</tr>
		<%= render :partial => 'user', :collection => @guild.leaders, :as => :user, :locals => {:guild => @guild}%>
	</tbody>
	<tbody>
		<tr class="header">
			<th class="narrow"></th>
			<th colspan="3"><%= image_tag('icons/role-officer.gif') %> <%= t('users.officers') %></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
		</tr>
		<%= render :partial => 'user', :collection => @guild.officers, :as => :user, :locals => {:guild => @guild}%>
	</tbody>
	<tbody>
		<tr class="header">
			<th class="narrow"></th>
			<th colspan="3"><%= image_tag('icons/role-raidleader.gif', :size => "16x16") %> <%= t('users.raidleaders') %></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
		</tr>
		<%= render :partial => 'user', :collection => @guild.raidleaders, :as => :user, :locals => {:guild => @guild}%>
	</tbody>
	<tbody>
		<tr class="header">
			<th class="narrow"></th>
			<th colspan="3"><%= image_tag('icons/role-member.gif') %><%= t('users.members') %></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
			<th class="narrow"></th>
		</tr>
		<%= render :partial => 'user', :collection => @guild.members, :as => :user, :locals => {:guild => @guild}%>
	</tbody>
	<% else %>
	<tbody>
		<%= render :partial => 'user', :collection => @users, :as => :user, :locals => {:guild => @guild}%>
	</tbody>
	<% end %>
</table>
