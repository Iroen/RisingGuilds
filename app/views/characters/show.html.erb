<div id="content_menu">
	<ul>
		<% if permitted_to? :link, @character %>
		<li><%= link_to('Mark as Mine!', {:controller => "characters", :id => @character.id, :action => 'link'}, :confirm => 'Is this really your character?')  %></li>
		<% end %>
		<% if permitted_to? :delink, @character %>
		<li><%= link_to('Not Mine!', :confirm => 'Are you sure?', :action => 'delink')  %></li>
		<% end %>
		<% if permitted_to? :actualize, @character %>
		<li><%= link_to('Actualize', :action => 'actualize') %></li>
		<li><%= link_to('Generate AIL', :action => 'generate_ail') %></li>
		<% end %>
	</ul>
</div>

<div id="charheader">
	<div id="avatar">
		<%= image_tag charicon_path(@character), :size => "64x64", :alt => "Character Icon" %>
		<div id="level">
		  <%=h @character.level %>
		</div>
	</div>

	<div id="iconbar">
	  <div id="class-icon"><%= image_tag classicon_path(@character),:size => "18x18" %></div>
	  <div id="race-icon"><%= image_tag raceicon_path(@character),:size => "18x18" %></div>
	  <div id="faction-icon"><%= image_tag factionicon_path(@character), :size => "18x18" %></div>
	</div>
	
	<div id="infos">
		<div id="name">
		  <%=h @character.name %> <span id="main"><%=h "Mainchar" if @character.main %></span>
		</div>
		
		<% unless @character.guild.nil? %>
		<div id="guild">
		  <%= link_to(@character.guild.name, guild_path(@character.guild))  %> <%=h "(Rank " + @character.rank.to_s + ")" %>
		</div>
		<% end %>
	
		<% unless @character.user.nil? %>
		<div id="owner">
		  owned by <%=h @character.user.login  %>
		</div>
		<% end %>

	</div>
	
	<div id="onlinestatus">
		<%= online_text(@character.online) %>
	</div>
</div>

<div class="clear"></div>
<div class="box_small" style="min-height:200px;float:right">
	<div class="box_headline">Events</div>
	<div id="events_box">
	<%= render :partial => "events", :locals => {:events => @character.events}%>
  </div>
</div>
<div class="box_small">
	<div class="box_headline">Details</div>
	<table>
		<tr>
			<td class="left" style="width:50%;"><b>Last Seen:</b></td>
			<td style="width:50%;"><%=h @character.last_seen %></td>
		</tr>
		<tr>
			<td class="left"><b>Activity:</b></td>
			<td><%=h @character.activity %></td>
		</tr>
		</tr>
		<tr>
			<td class="left"><b>Achivement Points:</b></td>
			<td><%=h @character.achivementpoints %></td>
		</tr>
		<% unless @character.ail.nil? || @character.ailstddev.nil? %>
		<tr>
			<td class="left"><b>AverageItemLevel:</b></td>
			<td><%=h @character.ail %> &plusmn; <%=h @character.ailstddev %></td>
		</tr>
		<% end %>
	</table>			
</div>

<div class="box_small">
  <div class="box_headline">Professions & Talentspecs</div>
    <table>
			<tr>
			<% if @character.talentspec1 then %>
				<td style="text-align:right"><%=h @character.talentspec1.prim %> [<%=h @character.talentspec1.trees[1] %>/<%=h @character.talentspec1.trees[2] %>/<%=h @character.talentspec1.trees[3] %>]</td>
				<td class="narrow"><%= image_tag(talentspecicon_path(@character.talentspec1,@character.class_id)) if @character.talentspec1 %></td>
			<% end %>
			<% if @character.profession1 then %>
				<td class="narrow"><%= image_tag(professionicon_path(@character.profession1))  %></td>
				<td><%= profession_progressbar(@character.profession1) %></td>
			<% end %>
			</tr>
      <tr>
			<% if @character.talentspec2 then %>
				<td style="text-align:right"><%=h @character.talentspec2.prim %> [<%=h @character.talentspec2.trees[1] %>/<%=h @character.talentspec2.trees[2] %>/<%=h @character.talentspec2.trees[3] %>]</td>
				<td class="narrow"><%= image_tag(talentspecicon_path(@character.talentspec2,@character.class_id)) if @character.talentspec2 %></td>
			<% end %>
			<% if @character.profession2 then %>
				<td class="narrow"><%= image_tag(professionicon_path(@character.profession2))  %></td>
				<td><%= profession_progressbar(@character.profession2) %></td>
			<% end %>
			</tr>
    </table>
</div>


                  
