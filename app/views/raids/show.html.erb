<p>
  <b>Guild:</b>
  <%=h @raid.guild_id %>
</p>

<p>
  <b>Title:</b>
  <%=h @raid.title %>
</p>

<p>
  <b>Max attendees:</b>
  <%=h @raid.max_attendees %>
</p>

<p>
  <b>Invite start:</b>
  <%=h @raid.invite_start %>
</p>

<p>
  <b>Start:</b>
  <%=h @raid.start %>
</p>

<p>
  <b>End:</b>
  <%=h @raid.end %>
</p>

<p>
  <b>Description:</b>
  <%=h @raid.description %>
</p>

<p>
  <b>Leader:</b>
  <%=h @raid.leader %>
</p>

<table>
  <tr>
	<th>Name</th>
	<th>Role</th>
  </tr>

<% unless @raid.attendances.empty? %>
<% (1..4).each do |i| %>
  <tr>
	<td colspan=2><%=h configatron.raidplanner.status.index(i) %></td>
  </tr>
<% @raid.attendances.find_all_by_status(i).each do |attendance|%>	
  <tr style="<%= approve_style_helper(attendance.approved) %>">
	<td><%=h attendance.character.name %></td>
	<td><%=h attendance.role %></td>
	<td><%=h attendance.message %></td>
	<td><%= link_to((attendance.approved ? "reject" : "approve"), {:controller => :attendances, :id => attendance.id , :action => :approve}) if permitted_to?(:approve,attendance)%>
  </tr>
<% end %>
<% end %>
<% end %>
</table>

<% if @attendance.new_record? %>
<%= render :partial => "new_attend_form", :object => @attendance %>
<% else %>
<%= render :partial => "update_attend_form", :object => @attendance%>
<% end %>

<%= link_to 'Edit', edit_raid_path(@raid) %> |
<%= link_to 'Back', raids_path %>