<p>
  <b>Guild:</b>
  <%=h @raid.guild_id %>
</p>

<p>
  <b>Title:</b>
  <%=h @raid.title %>
</p>

<p>
  <b>Max attendees:</b>
  <%=h @raid.max_attendees %>
</p>

<p>
  <b>Invite start:</b>
  <%=h @raid.invite_start %>
</p>

<p>
  <b>Start:</b>
  <%=h @raid.start %>
</p>

<p>
  <b>End:</b>
  <%=h @raid.end %>
</p>

<p>
  <b>Description:</b>
  <%=h @raid.description %>
</p>

<p>
  <b>Leader:</b>
  <%=h @raid.leader %>
</p>

<table>
  <tr>
	<th>Name</th>
	<th>Role</th>
  </tr>

<% unless @raid.attendances.empty? %>
<% (0..4).each do |i| %>
<% @raid.attendances.find{|a| a.status == i}.each do |attendance|%>	
  <tr>
	<td><%=h attendance.character.name %></td>
	<td><%=h attendance.role %>
  </tr>
<% end %>
<% end %>
<% end %>
</table>

<%= link_to 'Attend'%>

