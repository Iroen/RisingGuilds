<h1>Listing raids</h1>
<% unless @raids.nil? || @raids.empty? %>
<div id="calendar">
	<h2 id="month">
	  <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y/%m") %>
	  <%=h @date.strftime("%B %Y") %>
	  <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y/%m") %>
	</h2>
	<% calendar_for @raids, :year => @date.year, :month => @date.month do |calendar| %>
	  <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
	  <% calendar.day(:day_method => :start) do |date, raids| %>
		<%= date.day %>
		<ul>
		  <% for raid in raids %>
		    <li><%= link_to h(raid.title), "/guilds/#{raid.guild.id}/raids/#{raid.id}" %></li>
		  <% end %>
		</ul>
	  <% end %>
	<% end %>
</div>

<table>
  <tr>
    <th>Guild</th>
    <th>Title</th>
    <th>Max attendees</th>
    <th>Invite start</th>
    <th>Start</th>
    <th>End</th>
    <th>Description</th>
    <th>Leader</th>
    <th>Closed</th>
  </tr>

<% @raids.each do |raid| %>
  <tr>
    <td><%=h raid.guild.name %></td>
    <td><%=h raid.title %></td>
    <td><%=h raid.max_attendees %></td>
    <td><%=h raid.invite_start %></td>
    <td><%=h raid.start %></td>
    <td><%=h raid.end %></td>
    <td><%=h raid.description %></td>
    <td><%=h raid.leader %></td>
    <td><%=h raid.closed %></td>
    <td><%= link_to 'Show', raid %></td>
    <td><%= link_to 'Edit', edit_raid_path(raid) %></td>
    <td><%= link_to 'Destroy', raid, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
<p>There are no raids which could be attended by you</p>
<% end %>
<br />

<%= link_to 'New raid', "/guilds/#{@guild.id}/raids/new" unless @guild.nil? %>